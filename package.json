{
  "name": "giaydephongan",
  "version": "1.0.0",
  "description": "Laravel 12 + Nuxt 4 TypeScript Full-Stack Application",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:laravel\" \"npm run dev:nuxt\"",
    "dev:laravel": "php artisan serve",
    "dev:nuxt": "cd frontend && npm run dev",
    "build": "npm run build:nuxt",
    "build:nuxt": "cd frontend && npm run build",
    "install:all": "composer install && cd frontend && npm install",
    "setup": "npm run install:all && cp .env.example .env && php artisan key:generate"
  },
  "devDependencies": {
    "concurrently": "^8.0.0"
  }
}
